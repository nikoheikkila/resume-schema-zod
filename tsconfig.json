{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "dist",
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
	},
	"include": [
		"index.d.ts",
	],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts",
		"**/*.config.ts",
	]
}
